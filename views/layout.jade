doctype html
html(lang='en')
  block link
    -var selected = 'Home'; //default

  -var menu = { 'Home': '/', 'About': '/about', 'Search': '/search' };
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title #{selected} | Colenso Project
    link(rel='stylesheet', href='stylesheets/style.css')
    // Custom styles for this template
    link(rel='stylesheet', href='stylesheets/starter-template.css')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Colenso Project
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            each val, key in menu
              if selected === key
                li.active
                  a.selected(href=val, title=key)= key
              else
                li
                  a(href=val, title=key)= key
    .container
      .starter-template
        block content
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
